{
  "name": "knot-lib/http",
  "description": "HTTP support library for kNot framework.",
  "keywords": ["PHP","PHP7","kNot framework","HTTP"],
  "homepage": "https://github.com/knot-lib/http",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Katsuki Shuto",
      "email": "stk2k@knot-framework.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "psr/http-server-middleware": "^1.0",
    "knot-lib/kernel": "~0.8",
    "knot-lib/services": "~0.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5.15",
    "php-coveralls/php-coveralls": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "knotlib\\http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "knotlib\\http\\test\\": "test/"
    }
  }
}